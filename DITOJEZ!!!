            height: 100vh;
            margin: 0;
            overflow: hidden;
        }
        .game-area {
            display: none;
            width: 100%;
            height: 90vh;
            text-align: center;
        }
        .discard-pile {
            padding: 15px;
            border-radius: 10px;
            font-size: 22px;
            font-weight: bold;
            color: black;
            display: inline-block;
            margin: 15px;
